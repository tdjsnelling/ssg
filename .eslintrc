{
  "extends": [
    "eslint:recommended",
    "plugin:prettier/recommended"
  ],

  "rules": {
    "jsx-quotes": [2, "prefer-double"],
    "object-curly-spacing": ["error", "always"],
    "arrow-parens": ["error", "as-needed"]
  },
  "env": {
    "es6": true,
    "node": true
  },
  "parserOptions": {
    "sourceType": "module",
    "ecmaVersion": 2018
  }
}
